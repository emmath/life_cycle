<% title(@fellow.name, "Fellows") %>
<h2><%= @fellow.name %></h2>

<table class="table table-bordered">
  <tr>
    <th>Email</th>
    <th>Twitter Handle</th>
    <th>Facebook</th>
    <th>LinkedIn</th>
    <th>Notes</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <tr>
    <td><%= @fellow.email %></td>
    <td><%= @fellow.twitter %></td>
    <td><%= @fellow.facebook %></td>
    <td><%= @fellow.linkedin %></td>
    <td><%= @fellow.notes %></td>
    <td><%= link_to "Edit Fellow", edit_fellow_path(@fellow) %></td>
    <td><%= link_to "Delete Fellow",
     fellow_path(@fellow),
     :method => :delete,
     :confirm => "Wait. Are you SURE you want to delete this fellow?" %></td>
  </tr>

</table>
  <br />
  <br />

  <h2>Fellow History</h2>
  <table class="table table-bordered">
    <tr>
      <th>Date</th>
      <th>Status</th>
    </tr>
    <% @fellow.fellowstatuses.each do |fellow_status| %>
      <tr>
        <td><%= fellow_status.created_at.to_date %></td>
        <td><%= fellow_status.status.name %></td>
      </tr>
    <% end %>

  </table>






